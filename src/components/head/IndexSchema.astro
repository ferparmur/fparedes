---
const { title, description } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);

const schema = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": ["Person", "Organization"],
            "@id": `${Astro.site}#/schema/person/8b0de6231c6bc0b6d90c3aa271e3ad02`,
            "name": "Fernando Paredes Murillo",
            "image": {
                "@type": "ImageObject",
                "@id": `${Astro.site}#personlogo`,
                "inLanguage": "en-US",
                "url": `${Astro.site}media/fernando-paredes.png`,
                "contentUrl": `${Astro.site}media/fernando-paredes.png`,
                "width": 512,
                "height": 512,
                "caption": "Fernando Paredes Murillo"
            },
            "logo": {
                "@id": `${Astro.site}#personlogo`
            },
            "sameAs": [
                Astro.site,
                "https://www.linkedin.com/in/fernandoparedes/",
                "https://twitter.com/ferparmur"
            ],
            "url": Astro.site
        },
        {
            "@type": "WebSite",
            "@id": `${Astro.site}#website`,
            "url": `${Astro.site}`,
            "name": title,
            "description": "",
            "publisher": {
                "@id": `${Astro.site}#/schema/person/8b0de6231c6bc0b6d90c3aa271e3ad02`
            },
            "inLanguage": "en-US"
        },
        {
            "@type": "CollectionPage",
            "@id": `${Astro.site}#webpage`,
            "url": Astro.site,
            "name": title,
            "isPartOf": {
                "@id": `${Astro.site}/#website`
            },
            "description": description,
            "breadcrumb": {
                "@id": `${Astro.site}/#breadcrumb`
            },
            "inLanguage": "en-US",
            "potentialAction": [
                {
                    "@type": "ReadAction",
                    "target": [
                        Astro.site
                    ]
                }
            ]
        },
        {
            "@type": "BreadcrumbList",
            "@id": `${Astro.site}/#breadcrumb`,
            "itemListElement": [
                {
                    "@type": "ListItem",
                    "position": 1,
                    "name": "Home",
                    "item": Astro.site
                },
                {
                    "@type": "ListItem",
                    "position": 2,
                    "name": "Home"
                }
            ]
        }
    ]
};
---

<script type="application/ld+json" is:inline set:html={JSON.stringify(schema)}>
</script>
