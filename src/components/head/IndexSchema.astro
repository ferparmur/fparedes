---
import person from "../../data/schema/person";
import website from "../../data/schema/website";

const { title, description } = Astro.props;

const schema = {
    "@context": "https://schema.org",
    "@graph": [
        person(Astro.site.href),
        website(Astro.site.href),
        {
            "@type": "CollectionPage",
            "@id": `${Astro.site}#webpage`,
            "url": Astro.site,
            "name": title,
            "isPartOf": {
                "@id": `${Astro.site}/#website`
            },
            "description": description,
            "breadcrumb": {
                "@id": `${Astro.site}/#breadcrumb`
            },
            "inLanguage": "en-US",
            "potentialAction": [
                {
                    "@type": "ReadAction",
                    "target": [
                        Astro.site
                    ]
                }
            ]
        },
        {
            "@type": "BreadcrumbList",
            "@id": `${Astro.site}/#breadcrumb`,
            "itemListElement": [
                {
                    "@type": "ListItem",
                    "position": 1,
                    "name": "Home",
                    "item": Astro.site
                },
                {
                    "@type": "ListItem",
                    "position": 2,
                    "name": "Home"
                }
            ]
        }
    ]
};
---

<script type="application/ld+json" is:inline set:html={JSON.stringify(schema)}>
</script>
