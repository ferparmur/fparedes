---
import person from "../../data/schema/person";
import website from "../../data/schema/website";
import breadcrumbList from "../../data/schema/breadcrumbList";

const { title, description } = Astro.props;

const schema = {
    "@context": "https://schema.org",
    "@graph": [
        person(Astro.site.href),
        website(Astro.site.href),
        {
            "@type": "CollectionPage",
            "@id": `${Astro.site}#webpage`,
            "url": Astro.site,
            "name": title,
            "isPartOf": {
                "@id": `${Astro.site}/#website`
            },
            "description": description,
            "breadcrumb": {
                "@id": `${Astro.site}/#breadcrumb`
            },
            "inLanguage": "en-US",
            "potentialAction": [
                {
                    "@type": "ReadAction",
                    "target": [
                        Astro.site
                    ]
                }
            ]
        },
        breadcrumbList(Astro.site.href, [
            {
                "name": "Home",
                "item": Astro.site.href
            },
            {
                "name": "Home"
            }
        ])
    ]
};
---

<script type="application/ld+json" is:inline set:html={JSON.stringify(schema)}>
</script>
